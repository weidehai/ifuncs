{
  "compilerOptions": {
    "module": "ES2015",
    "lib": [
      "es2019",
      "dom"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration":true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
